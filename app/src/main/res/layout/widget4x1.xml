<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/audio_drawable"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="72dp"
        android:scaleType="centerCrop"
        android:layout_height="72dp"
        android:background="@drawable/audio_drawable"
        android:contentDescription="@string/app_label"
        android:src="@drawable/app_play" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/audio_drawable"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:text="@string/app_label"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading"
                android:text="Album"
                android:maxLines="1"
                android:textColor="@color/whiteOpaque"
                android:id="@+id/textalbum"
                android:layout_alignLeft="@+id/heading"
                android:layout_alignStart="@+id/heading"
                android:layout_toLeftOf="@+id/lin"
                android:layout_toStartOf="@+id/lin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textalbum"
                android:layout_toLeftOf="@+id/lin"
                android:layout_alignLeft="@+id/heading"
                android:layout_alignStart="@+id/heading"
                android:textColor="@color/whiteOpaque"
                android:maxLines="1"
                android:layout_marginTop="2dp"
                android:text="Artist"
                android:id="@+id/texttime" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/lin"
                android:layout_marginBottom="2dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_label"
                    android:rotation="180"
                    android:padding="11dp"
                    android:tint="@color/white"
                    android:src="@drawable/app_next" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:tint="@color/white"
                    android:contentDescription="@string/app_label"
                    android:src="@drawable/app_play" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="11dp"
                    android:tint="@color/white"
                    android:contentDescription="@string/app_label"
                    android:src="@drawable/app_next" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>