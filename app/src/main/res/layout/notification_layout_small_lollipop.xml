<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:background="@color/playerControlsBackground"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:padding="8dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_label"
        android:tint="@color/whiteOpaque"
        android:src="@drawable/ic_close_black_48dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_toLeftOf="@+id/imageView2"
        android:background="@drawable/app_play"
        android:contentDescription="@string/app_label"
        android:src="@drawable/audio_drawable" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="4dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/imageView7"
            android:layout_toStartOf="@+id/imageView7"
            android:id="@+id/relativeLayout2">

            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:textColor="@color/white"
                android:text="@string/app_label"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="17dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/heading"
                android:layout_below="@+id/heading"
                android:layout_alignParentLeft="true"
                android:maxLines="1"
                android:textColor="@color/whiteOpaque"
                android:text="@string/app_label"
                android:textSize="14dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="46dp"
            android:padding="15dp"
            android:layout_height="48dp"
            android:contentDescription="@string/app_label"
            android:src="@drawable/app_next"
            android:rotation="180"
            android:tint="@color/whiteOpaque"
            android:layout_toLeftOf="@+id/imageView3"
            android:layout_alignTop="@+id/imageView4"
            android:layout_centerHorizontal="true" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="54dp"
            android:padding="14dp"
            android:tint="@color/white"
            android:layout_height="64dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageView4"
            android:contentDescription="@string/app_label"
            android:src="@drawable/app_play" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="46dp"
            android:padding="15dp"
            android:layout_height="48dp"
            android:tint="@color/whiteOpaque"
            android:contentDescription="@string/app_label"
            android:src="@drawable/app_next"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>